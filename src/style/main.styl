@import 'reset'

.content {
	width: 90%;
	margin: 30px auto;
	h1 {
		font-size: 20px;
		padding: 10px 0;
	}
	.albums {
		> * {
			opacity: 1;
			transition: all 0.3s;
		}
	}
	table {	
		img {
			max-width: 35px;
		}
		th {
			cursor: pointer;
			&:last-child {
				cursor: auto;
			}
		}
	}
}

.loading {
	position: relative;
	min-height: 200px;
	> * {
		opacity: 0 !important;
	}
	&:after {
		content: url(../img/loader.gif);
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%,-50%);
		z-index: 2;
	}
	&:before {
		content: '';
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0;
		left: 0;
	}
}